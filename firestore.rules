rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Districts - Read-only for all authenticated users
    match /districts/{districtId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only via Admin SDK
    }
    
    // Environmental Data - Read-only for all authenticated users
    match /environmental_data/{dataId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only via Admin SDK
    }
    
    // Tree Contributions - Users can create, read their own
    match /tree_contributions/{contributionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid;
      allow update: if false; // Only via Admin SDK (for verification)
      allow delete: if false; // Only via Admin SDK
    }
    
    // Donations - Users can create, read their own
    match /donations/{donationId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid;
      allow update: if false;
      allow delete: if false;
    }
    
    // Leaderboard - Read-only for all authenticated users
    match /leaderboard/{leaderboardId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only via Admin SDK
    }
    
    // User Profiles - Users can read/write their own profile
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Prevent deletion of user profiles
    }
  }
}

