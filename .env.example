# ==============================================
# VAYURA ENVIRONMENT CONFIGURATION
# ==============================================

# ----------------------------------------------
# FIREBASE - Authentication & Database (REQUIRED)
# ----------------------------------------------
# Get from: https://console.firebase.google.com/
# Project Settings → Your apps → Web app config

# Public Firebase Config (Safe to expose in browser)
NEXT_PUBLIC_FIREBASE_API_KEY=AIza...your_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef

# Firebase Admin SDK (Server-side ONLY - Keep secret!)
# Get from: Firebase Console → Project Settings → Service accounts → Generate new private key
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"

# ----------------------------------------------
# GEMINI AI - Smart Data Fetching (REQUIRED)
# ----------------------------------------------
# Get FREE API key from: https://ai.google.dev/
# No credit card required, 60 requests per minute free tier

GEMINI_API_KEY=AIza...your_gemini_key_here

# ----------------------------------------------
# NEXT.JS - Base URL (Optional but recommended)
# ----------------------------------------------

NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ----------------------------------------------
# PYTHON SERVICE - Oxygen Calculation (REQUIRED)
# ----------------------------------------------
# URL where Python FastAPI service runs
# Default: http://localhost:8000

PYTHON_SERVICE_URL=http://localhost:8000

# ----------------------------------------------
# OPTIONAL: Additional Data Sources
# ----------------------------------------------
# OpenWeatherMap API (for air quality data)
# Get from: https://openweathermap.org/api
# Free tier: 1000 calls/day

OPENWEATHER_API_KEY=your_openweather_key_here

# ----------------------------------------------
# ENVIRONMENT
# ----------------------------------------------
NODE_ENV=development

